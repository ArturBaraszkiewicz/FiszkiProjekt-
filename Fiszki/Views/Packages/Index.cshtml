@model IEnumerable<Fiszki.Models.Package>

@{
    ViewBag.Title = "Aktualnie dostępne kursy";
}

<h2>Aktualnie dostępne kursy</h2>
<p>Wybierz kurs aby rozpocząć jego naukę.</p>
<p>@Html.ActionLink("Stwórz nowy kurs", "Create", "Packages")</p>
<div id="Container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="mix col-md-4" data-myorder="1">
                <h2>
                    @Html.DisplayFor(modelItem => item.Name)
                </h2>
                <p>
                    @Html.DisplayFor(modelItem => item.Text)
                </p>
                <p>
                    @Html.ActionLink("Rozpocznij naukę.", "Package", "Learn", new { id = item.ID }, null)
                </p>
            </div>
        }
    </div>
</div>
